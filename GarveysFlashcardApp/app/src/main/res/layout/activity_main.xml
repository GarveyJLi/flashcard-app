<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question_textview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/delete_imageview"
        android:layout_margin="10dp"
        android:background="@drawable/card_background"
        android:elevation="10dp"
        android:gravity="center"
        android:text="Who is the 44th President of the United States?"
        android:textColor="@color/dark_blue"
        android:textSize="40sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/correct_flashcard_answer_2_textview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/reverse_card_background"
        android:gravity="center"
        android:text="Barack Obama"
        android:textColor="@color/light_blue"
        android:textSize="30dp"
        android:layout_alignTop="@id/flashcard_question_textview"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/incorrect_flashcard_answer_1_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flashcard_question_textview"
        android:layout_margin="10dp"
        android:background="@drawable/card_background"
        android:gravity="center"
        android:text="George H. W. Bush"
        android:textColor="@color/dark_blue"
        android:textSize="30dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/correct_flashcard_answer_1_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/incorrect_flashcard_answer_1_textview"
        android:layout_margin="10dp"
        android:background="@drawable/card_background"
        android:gravity="center"
        android:text="Barack Obama"
        android:textColor="@color/dark_blue"
        android:textSize="30dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/incorrect_flashcard_answer_2_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/correct_flashcard_answer_1_textview"
        android:layout_margin="10dp"
        android:background="@drawable/card_background"
        android:gravity="center"
        android:text="Bill Clinton"
        android:textColor="@color/dark_blue"
        android:textSize="30dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/toggle_choices_visibility_visible_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_iconmonstr_eye_off_thin"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/toggle_choices_visibility_invisible_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_iconmonstr_eye_thin"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/add_flashcard_button_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_iconmonstr_plus_6" />

    <ImageView
        android:id="@+id/edit_current_flashcard_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/add_flashcard_button_imageview"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_edit_24" />

    <ImageView
        android:id="@+id/right_button_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/add_flashcard_button_imageview"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/ic_baseline_arrow_forward_24" />

    <ImageView
        android:id="@+id/delete_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:background="@drawable/ic_baseline_delete_24" />


</RelativeLayout>